            },
            "TransactionRequest": {
                "required": [
                    "user_id",
                    "date",
                    "payment_status",
                    "details"
                ],
                "properties": {
                    "user_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "payment_status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "paid",
                            "failed",
                            "refunded"
                        ]
                    },
                    "details": {
                        "type": "array",
                        "items": {
                            "required": [
                                "product_id",
                                "qty"
                            ],
                            "properties": {
                                "product_id": {
                                    "type": "integer",
                                    "format": "int64"
                                },
                                "qty": {
                                    "type": "integer",
                                    "minimum": 1
                                }
                            },
                            "type": "object"
                        },
                        "minItems": 1
                    }
                },
                "type": "object"
            },
            "UserRequest": {
                "required": [
                    "name",
                    "email",
                    "role"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255
                    },
                    "phone": {
                        "type": "string",
                        "minLength": 8
                    },
                    "password": {
                        "type": "string",
                        "minLength": 8,
                        "nullable": true
                    },
                    "role": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "type": "object"
            },
